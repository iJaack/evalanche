{
  "name": "evalanche",
  "version": "0.2.0",
  "description": "Agent wallet SDK for Avalanche with onchain identity (ERC-8004) and payment rails (x402)",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "evalanche-mcp": "./dist/mcp/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "avalanche",
    "agent",
    "wallet",
    "erc-8004",
    "x402",
    "web3",
    "ai-agent"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@avalabs/avalanchejs": "^5.0.0",
    "@avalabs/core-wallets-sdk": "^3.0.2",
    "@ledgerhq/cryptoassets": "^13.39.1",
    "big.js": "^7.0.1",
    "ethers": "^6.13.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
